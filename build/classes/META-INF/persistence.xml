<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="Account">
		<provider></provider>
		<class>acc.application.model.Adress</class>
		<class>acc.application.model.Bank_account</class>
		<class>acc.application.model.Bank_accountPK</class>
		<class>acc.application.model.Bank_detail</class>
		<class>acc.application.model.Branch</class>
		<class>acc.application.model.BranchPK</class>
		<class>acc.application.model.Company_Detail</class>
		<class>acc.application.model.Company_account</class>
		<class>acc.application.model.Company_accountPK</class>
		<class>acc.application.model.Ledger_Group</class>
		<class>acc.application.model.Ledger_account</class>
		<class>acc.application.model.Ledger_accountPK</class>
		<class>acc.application.model.Unit_creation</class>
		<class>acc.application.model.AccountType</class>
		<class>acc.application.model.Item</class>
		<class>acc.application.model.ItemPK</class>
		<class>acc.application.model.ItmGroup</class>
		<class>acc.application.model.Role</class>
		<class>acc.application.model.User</class>

		<properties>
			<property name="javax.persistence.jdbc.user" value="root"/>
			<property name="javax.persistence.jdbc.password" value="root"/>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/Account"/>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
			
			<!-- EclipseLink should create the database schema automatically -->
			<property name="eclipselink.ddl-generation" value="create-tables" />
			<property name="eclipselink.ddl-generation.output-mode"
				value="database" />
		</properties>
		<!-- <properties> <property name="eclipselink.jdbc.password" value="root" 
			/> <property name="eclipselink.jdbc.user" value="root" /> <property name="eclipselink.jdbc.driver" 
			value="com.mysql.jdbc.Driver" /> <property name="eclipselink.jdbc.url" value="jdbc:mysql://localhost:3306/Account" 
			/> <property name="eclipselink.ddl-generation" value="drop-and-create-tables" 
			/> <property name="eclipselink.logging.level" value="INFO" /> </properties> -->

	</persistence-unit>
</persistence>
